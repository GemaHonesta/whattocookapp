<% layout('./layouts/page') %> 
<% block('title', 'Sign up') %>

<div class="container">
  <div class="row m-5">
    
    <div class="col d-flex flex-column mt-2 me-3">
      <h2 class="mb-5">Register individual account</h2>
      <form action="/api/user" method="POST">
        <div class="mb-4">
          <label for="signup-firstname">First Name<sup>*</sup></label><br>
          <input type="text" name="firstName" id="signup-firstname" class="form-control">
        </div>

        <div class="mb-4">
          <label for="signup-lastname">Last Name<sup>*</sup></label><br>
          <input type="text" name="lastName" id="signup-lastname" class="form-control">
        </div>

        <div class="mb-4">
          <label for="signup-email">Email address<sup>*</sup></label><br>
          <input type="email" name="email" id="signup-email" class="form-control">
        </div>
        
        <div class="mb-4">
          <label for="signup-password">Create password<sup>*</sup></label><br>
          <input type="password" name="password" id="signup-password" class="form-control">
        </div>
        
        <div class="d-grid mb-4">
          <button class="btn btn-warning text-white btn-lg" type="submit">Register account</button>
        </div>
        <p>Do you have an account? <a href="http://localhost:5000/api/auth">Log in</a></p>
      </form>
      
    </div>

    <div class="col d-none d-md-inline-block">
      <img src="/images/SignUp.png" alt="vegetables">
    </div>
  </div>
</div>